<Window x:Class="FileCompressionCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileCompressionCSharp"
        mc:Ignorable="d" ResizeMode="NoResize"
        Background="#1E1E1E" AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <SolidColorBrush x:Key="WarningBrush" Color="Red" />
    </Window.Resources>
    
    <Grid Margin="20">
        
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Text="File Compression Tool" FontSize="24" FontWeight="Bold" Foreground="White" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Drop Zone and Path Display -->
        <Border Grid.Row="1" BorderBrush="#007ACC" BorderThickness="2" CornerRadius="10"
                Background="#2D2D30" Padding="20" AllowDrop="True"
                Drop="Window_Drop" DragOver="Window_DragOver" Margin="0,0,280,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Margin="0 10 0 0" Text="Drag and Drop a File or Folder here."
                           Foreground="LightGray" FontSize="16" HorizontalAlignment="Center" />
                <TextBlock  Margin="0 10 0 10" Text="OR" Foreground="LightGray" FontSize="16" HorizontalAlignment="Center" />
                <Button  Margin=" 0 10 0 10" Content="Browse..." Width="120" Height="35" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="Browse_Click"/>
                <TextBlock x:Name="SelectedPath" Text="No file/folder selected" FontSize="14" Margin="0,20,0,0" TextWrapping="Wrap" TextAlignment="Center">
                    <TextBlock.Foreground>
                        <SolidColorBrush  x:Name="SelectedPathBrush" Color="LightGray"/>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Algorithm Select -->
        <Border  Grid.Row="1" BorderBrush="#007ACC" BorderThickness="2" CornerRadius="10"
        Background="#2D2D30" Padding="20" AllowDrop="True"
        Drop="Window_Drop" DragOver="Window_DragOver" Margin="480,0,0,0">
            <StackPanel x:Name="pnlAlgorithm" HorizontalAlignment="Center" >
                <TextBlock Margin="0 10 0 0" Text="Select Algorithm"
                    Foreground="LightGray" FontSize="14" HorizontalAlignment="Center"  VerticalAlignment="Top"/>

                <ToggleButton x:Name="btnHuffman" Content="Huffman" Checked="btnHuffman_Checked"
                  Width="100" Height="30" Margin="15 30 15 15" Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="11"/>


                <ToggleButton x:Name="btnSlidingWindow" Content="Sliding Window" Checked="btnSlidingWindow_Checked"
                  Width="100" Height="30" Margin="15"  Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="10"/>

                <ToggleButton x:Name="btnBoth" Content="Both" Checked="btnBoth_Checked"
                  Width="100" Height="30" Margin="15" Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="10"/>



            </StackPanel>
        </Border>
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button  x:Name="btnCompress" Margin =" 0 0 10 0" Content="Compress" Width="120" Height="40" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="Compress_Click"/>
            <Button  x:Name="btnDecompress" Margin="0 0 10 0" Content="Decompress" Width="120" Height="40" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="Decompress_Click"/>
            <Button Content="Clear" Width="120" Height="40" Background="#444" Foreground="White" Click="Clear_Click"/>
        </StackPanel>

    </Grid>
</Window>
